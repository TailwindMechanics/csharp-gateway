{
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Docker ðŸ¡…",
          "type": "shell",
          "command": "docker compose up --build",
          "problemMatcher": []
        },
        {
            "label": "Docker ðŸ¡‡",
            "type": "shell",
            "command": "docker compose down",
            "problemMatcher": []
        },
        {
          "label": "Build and Run",
          "type": "shell",
          "command": "dotnet watch run",
          "problemMatcher": []
        },
        {
            "label": "Generate Project Tree",
            "type": "shell",
            "command": "${input:generateProjectHierarchy}",
            "dependsOn": "Auto Comment Paths",
            "problemMatcher": []
        },
        {
            "label": "Auto Comment Paths",
            "type": "shell",
            "command": "node autoCommentPath.js",
            "problemMatcher": []
        },
        {
            "label": "Group Root",
            "type": "shell",
            "command": "node rootGrouper.js",
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dotnet_vanguard_gateway.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/dotnet_vanguard_gateway.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/dotnet_vanguard_gateway.sln"
            ],
            "problemMatcher": "$msCompile"
        },
    ],
    "inputs": [
        {
            "id": "generateProjectHierarchy",
            "type": "command",
            "command": "project-hierarchy-explorer.generate"
        }
    ]
}
